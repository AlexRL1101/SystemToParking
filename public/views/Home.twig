  {{ responseMessage }}
</div>
            <h3>Login</h3>
            <form action="/auth" method="post">
                <div class="contenedor-inputs">
                    <input name="correouser" type="email" placeholder="Email"><i class="icono fas fa-envelope" style="position: absolute;top: 35%;left: 10%;"></i>
                    <input name="passworduser" type="password" placeholder="Password"><i class="icono fas fa-key" style="position: absolute;top: 52%;left: 10%;"></i>
